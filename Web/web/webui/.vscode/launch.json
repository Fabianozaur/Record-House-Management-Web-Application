{
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: ng",
            "request": "launch",
            "command": "npm run ng",
            "cwd": "${workspaceFolder}"
        }
    ]
}